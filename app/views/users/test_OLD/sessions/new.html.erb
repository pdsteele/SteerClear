<div class="row-fluid">
  <div class="span4 offset6">
    <div class="form-page">

      <h1>Steer Clear Login</h1>

      <%= semantic_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

          <%= f.inputs do %>

              <%= f.input :email, :as => :email, :label => "WM Email", :autofocus => true %>

              <%= f.input :password, :as => :password, :label => "Password", :hint => "Hint: use your Steer Clear account password (NOT myWM, WMApps, Banner, etc...)" %>

              <% if devise_mapping.rememberable? -%>
                  <div class="form-inline"> <%= f.input :remember_me, :as => :boolean %> </div>
              <% end -%>

          <% end %> <!-- end inputs -->
          <div class="row-fluid" id="button">
            <%= f.action :submit, :label => "Sign In", :button_html => { :class => "btn btn-large btn-primary" } %>
            <!--<%= f.action :reset, :label => "Reset Fields", :button_html => { :class => "btn btn-large btn-primary" } %> -->
          </div>

      <% end %> <!-- ends form -->

      <%= render 'users/shared/links' %>

    </div>
  </div>
</div>
