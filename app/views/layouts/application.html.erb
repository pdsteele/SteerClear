          </a>
          <a class="brand" href="/">Steer Clear</a>
          <div class="container-fluid nav-collapse">
            <ul class="nav pull-right">
              <!-- links for not logged in -->
              <li><%= link_to "Sign Up", "/users/sign_up" %></li>
