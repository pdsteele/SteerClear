              <!--&lt;!&ndash; links for workers &ndash;&gt;-->
                <!--&lt;!&ndash; links for workers unassociated with an active van &ndash;&gt;-->
                <!--<li><%= link_to "Begin a Shift", "#"  %></li>   -->
                <!--&lt;!&ndash; links for workers that are associated with an active van &ndash;&gt;-->
                <!--<li><%= link_to "Unclaimed Ride Requests", "#"  %></li>-->
                <!--<li><%= link_to "Your Ride Requests", "#"  %></li>-->
                <!--<li><%= link_to "Create a Ride Request", "#"  %></li>-->
                <!--<li><%= link_to "End this Shift", "#" %></li>-->
                <!--&lt;!&ndash; end conditional &ndash;&gt;                -->
              <!--<li><%= link_to "Edit Profile", "#"  %></li>-->
              <!--<li><%= link_to "Logout", "#"  %></li>-->
              <!-- end links -->
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

    <div class="container-fluid">
      <div class="row-fluid">
        <div class="span9"> <!-- renders content of the page -->
          <%= bootstrap_flash %>
          <%= yield %>
        </div>
      </div><!--/row-->

      <footer>
        <%= render 'layouts/footer' %>  <!-- placeholder, create footer partial with links to about us and worker login -->
      </footer>

    </div> <!-- /container -->

    <!-- Javascripts
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <%= javascript_include_tag "application" %>

  </body>
</html>
