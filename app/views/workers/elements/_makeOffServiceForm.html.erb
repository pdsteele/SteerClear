<div class="form-page">
  <%= semantic_form_for(current_worker.currentShift, :url => workers_offService_path, :remote => true) do |f| %>
      <%= f.inputs do %>
          <%= f.input :inService, :as => :hidden, :input_html => { :value => false } %>
      <% end %>

      <div class="row-fluid" id="button"><%= f.action :submit, :label => "Stop Accepting Rides", :button_html => { :class => "btn btn-large btn-primary", :disable_with => 'Please wait...' } %></div>

  <% end %>
</div>