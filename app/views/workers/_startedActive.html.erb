<div id="active">

  <div class="row-fluid">
    <h1>Shift started at <%= current_worker.currentShift.created_at.strftime('%b %d %Y %I:%M %p') %></h1>
    <h2><i>You have been working for <%= current_worker.currentShift.shiftLength %></i></h2>
  </div>

  <div class="row-fluid">
    <h1>Do Not Accept Additional Ride Requests</h1>
    <h2><i>You have been accepting rides for <%= current_worker.currentShift.activeLength %></i></h2>
    <div id="becomeInactive">
      <%= render "workers/elements/makeOffServiceForm" %>
    </div>
  </div>

  <div class="row-fluid">
    <h1>Create a Ride Request</h1>
    <div id="createRideRequest">
    </div>
  </div>

  <div class="row-fluid">
    <h1>Your Team's Ride Requests</h1>
    <div id="acceptedRequests">
    </div>
  </div>

  <div class="row-fluid">
    <h1>Current Ride Request Queue</h1>
    <div id="currentQueue">
    </div>
  </div>


</div>
